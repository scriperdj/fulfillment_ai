# =============================================================================
# Fulfillment AI â€” Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values.
# =============================================================================

# Database
POSTGRES_USER=fulfillment
POSTGRES_PASSWORD=fulfillment_pass
POSTGRES_DB=fulfillment_ai
DATABASE_URL=postgresql+asyncpg://fulfillment:fulfillment_pass@postgres:5432/fulfillment_ai
DATABASE_URL_SYNC=postgresql+psycopg2://fulfillment:fulfillment_pass@postgres:5432/fulfillment_ai

# Kafka
KAFKA_BROKER=redpanda:9092

# OpenAI (required for LLM-powered agents)
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ML Model (directory containing model artifacts)
MODEL_PATH=models/
MODEL_CLASSIFIER_FILE=delay_classifier.joblib
MODEL_PREPROCESSOR_FILE=preprocessor.joblib
MODEL_METADATA_FILE=model_metadata.json

# Airflow
AIRFLOW_UID=50000
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://fulfillment:fulfillment_pass@postgres:5432/fulfillment_ai

# Producer Simulator
EVENTS_PER_SECOND=5
KAFKA_TOPIC=fulfillment-events
